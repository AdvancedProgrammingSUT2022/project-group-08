<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.ProfileMenu"
            stylesheets="@../CSS/style4.css"
            prefHeight="720.0" prefWidth="1280.0"
            styleClass="background">

    <center>
        <VBox alignment="CENTER" spacing="30">
            <Label text="choose your profile picture" styleClass="label" />
            <HBox alignment="CENTER" spacing="15">
                <ImageView onMouseClicked="#setFirstPic">
                    <Image url="@../pictures/0.png"/>
                </ImageView>
                <ImageView onMouseClicked="#setSecondPic">
                    <Image url="@../pictures/1.png"/>
                </ImageView>
            </HBox>
            <HBox alignment="CENTER" spacing="70">
                <ImageView onMouseClicked="#setThirdPic">
                    <Image url="@../pictures/2.png"/>
                </ImageView>
                <ImageView onMouseClicked="#setForthPic">
                    <Image url="@../pictures/3.png"/>
                </ImageView>
            </HBox>
        </VBox>
    </center>

</BorderPane>
