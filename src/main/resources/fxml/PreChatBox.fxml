<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.PreChatBox"
            prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@../CSS/style4.css"
            styleClass="background">

    <center>
        <VBox spacing="20" alignment="CENTER" maxWidth="400">
            <Label fx:id="chatLabel" text=" " prefWidth="400" alignment="CENTER" styleClass="secondLabel"/>
            <TextField promptText="enter player's id to chat privately" prefWidth="200" fx:id="privateChatTF" />
            <Button text="private chat" onMouseClicked="#privateChat" />
            <Button text="public chat" onMouseClicked="#publicChat" />
            <Button text="exit" onMouseClicked="#switchToMainMenu" />
        </VBox>
    </center>

</BorderPane>
