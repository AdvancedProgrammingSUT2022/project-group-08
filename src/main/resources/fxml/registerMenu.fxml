<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.RegisterMenu"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../CSS/style.css">
    <center>
        <VBox alignment="CENTER" spacing="5" maxWidth="350">
            <Label text="Username"/>
            <TextField fx:id="usernameTF" promptText="enter your username"/>
            <Label text="Nickname"/>
            <TextField fx:id="nicknameTF" promptText="enter your nickname"/>
            <Label text="Password"/>
            <PasswordField fx:id="passwordTF" promptText="enter your password"/>
            <Text text=" "/>
            <Text fx:id="message" text=" "/>
            <Text text=" "/>
            <Button styleClass="RegisterStyle" text ="Register" onMouseClicked="#registerMouseClicked"/>
            <Button text="Back" styleClass="MainMenuButton" onAction="#backClicked"/>
        </VBox>
    </center>

</BorderPane>
